{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "noUnusedParameters": false,
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "baseUrl": "src",
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    ".eslintrc.js"
  ]
}
